<div id="frame_container">
  <div id="frame">
    <div id="opinions" data-action="scrollup">
      <% @opinions.each do |opinion| %>
        <div class="opinion"><%= render opinion %></div>
      <% end %>
    </div>
  </div>
</div>

<% if current_user %>
<div id="my_opinion_container">
  <div id="my_opinion">
    <%= render "opinions/form" %>
  </div>
</div><% end %>

<div class="clear"></div>
