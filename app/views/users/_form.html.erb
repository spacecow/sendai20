<%= semantic_form_for @user do |f| %>
  <h1 class="first">Personal Info</h1>
  <%= f.input :name %>
  <%# f.input :username %>
  <%= f.input :email, :label => ft(:email)+'*' %>
  <%= f.input :prefecture, :as => :select, :collection => User::PREFECTURES %>
  <%= f.input :address %>
  <h1>Security</h1>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit (@user.new_record? ? t(:sign_up) : update(:profile)), :class => :submit %>
<% end %>

<img id="map" data-latitude="<%= @user.latitude %>" data-longitude="<%= @user.longitude %>" />
